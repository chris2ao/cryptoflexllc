{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rules": [
    {
      "route": "/api/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-host"
        }
      ],
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "route": "/(\\.(env|git|svn|htaccess|htpasswd|DS_Store).*)",
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "route": "/(wp-admin|wp-login\\.php|wp-content|xmlrpc\\.php|wp-includes)(.*)",
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "route": "/(phpmyadmin|pma|adminer|mysqladmin)(.*)",
      "mitigate": {
        "action": "deny"
      }
    }
  ]
}
