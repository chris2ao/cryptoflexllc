{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 14 * * 1"
    },
    {
      "path": "/api/cron/cleanup-rate-limits",
      "schedule": "0 */6 * * *"
    }
  ],
  "routes": [
    {
      "src": "/(\\.(env|git|svn|htaccess|htpasswd|DS_Store).*)",
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "src": "/(wp-admin|wp-login\\.php|wp-content|xmlrpc\\.php|wp-includes)(.*)",
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "src": "/(phpmyadmin|pma|adminer|mysqladmin)(.*)",
      "mitigate": {
        "action": "deny"
      }
    },
    {
      "src": "/api/(?!analytics|subscribe|unsubscribe|cron/weekly-digest|cron/cleanup-rate-limits|comments|subscribers)(.*)",
      "mitigate": {
        "action": "deny"
      }
    }
  ]
}
